<p style="color: green"><%= notice %></p>

<% content_for :title, "Relationships" %>

<h1>List of Student-Guardians</h1>

<table>
  <thead>
    <tr>
      <th>Guardian Name</th>
      <th>Student Name</th>
      <th>Relationship</th>
      <th>Show</th>
    </tr>
  </thead>
  <tbody>
    <% @relationships.each do |relationship| %>
      <tr>
        <td><%= relationship.guardian.name %></td>
        <td><%= relationship.student.name %></td>
        <td><%= relationship.relation %></td>
        <td><%= link_to "Show this Student Guardian", relationship %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New relationship", new_relationship_path %>
