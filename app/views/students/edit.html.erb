<% content_for :title, "Edit Student" %>

<div class="container mt-4">
  <div class="card shadow-lg border-0 rounded-4">
    <div class="card-header text-white fw-bold fs-4" style="background-color: #6f42c1;">
      <i class="bi bi-pencil-square me-2"></i> Edit Student
    </div>

    <div class="card-body p-4">
      <%= form_with(model: @student, local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :name, class: "form-label fw-semibold" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :year_level, class: "form-label fw-semibold" %>
          <%= form.text_field :year_level, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :program, class: "form-label fw-semibold" %>
          <%= form.text_field :program, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :department_id, "Department", class: "form-label fw-semibold" %>
          <%= form.collection_select :department_id, Department.all, :id, :name, { prompt: "Select a department" }, class: "form-select" %>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
          <%= link_to student_path(@student), class: "btn btn-outline-primary d-flex align-items-center gap-2" do %>
            <i class="bi bi-eye-fill"></i> Show Student
          <% end %>

          <%= form.submit "Update Student", class: "btn btn-primary update-btn d-flex align-items-center gap-2" %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= link_to students_path, class: "btn btn-outline-primary d-flex align-items-center justify-content-center gap-1 action-btn", style: "width: 210px;" do %>
          <i class="bi bi-arrow-left-circle"></i> Back to Students
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  @import url("https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css");

  body {
    background-color: #e9d5ff;
  }

  .card {
    background-color: #fff;
  }

  .update-btn {
    background-color: #6f42c1;
    border: none;
    font-weight: 500;
    padding: 10px 18px;
    transition: all 0.2s ease-in-out;
  }

  .update-btn:hover {
    background-color: #59309f;
    transform: translateY(-1px);
  }

  .btn-success {
    background-color: #6f42c1;
    border: none;
  }

  .btn-success:hover {
    background-color: #59309f;
  }

  .btn-outline-primary {
    color: #6f42c1;
    border-color: #6f42c1;
  }

  .btn-outline-primary:hover {
    background-color: #6f42c1;
    color: white;
  }

  .form-label {
    color: #4b2996;
  }

  .form-control, .form-select {
    border-radius: 10px;
    border-color: #d0aaff;
  }

  .form-control:focus, .form-select:focus {
    border-color: #6f42c1;
    box-shadow: 0 0 5px rgba(111, 66, 193, 0.4);
  }

  .card-header i {
    font-size: 1.3rem;
  }
</style>
