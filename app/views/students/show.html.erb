<div class="container-fluid py-4" style="background-color: #e6ccff; min-height: 100vh;">
  <div class="card shadow-sm p-4 mb-4 border-0" style="border-radius: 12px;">
    <h2 class="fw-bold text-dark mb-2"><%= @student.name %></h2>

    <p class="mb-1 text-muted">
      <strong>Year <%= @student.year_level %></strong> | <%= @student.program %>
    </p>
    <p class="text-muted mb-3"><%= @student.department.name if @student.department %></p>

    <div class="mt-3">
      <p><strong>Number of Units:</strong> <%= @student.number_of_units || 0 %></p>
      <p><strong>Total Assessment:</strong> â‚±<%= number_with_precision(@student.total_assessment, precision: 2) %></p>
    </div>
  </div>

  <div class="card shadow-sm p-3 border-0" style="border-radius: 12px;">
    <h5 class="fw-bold text-dark mb-3">
      <i class="bi bi-book"></i> List of Subjects
    </h5>
    <table class="table text-center align-middle" style="border-radius: 10px; overflow: hidden;">
      <thead style="background-color: #d1b3ff; color: black;">
        <tr>
          <th>Section</th>
          <th>Subject</th>
          <th>Teacher</th>
        </tr>
      </thead>
      <tbody>
        <% @student.classlists.each_with_index do |classlist, index| %>
          <tr style="background-color: <%= index.even? ? '#f2e6ff' : '#e6ccff' %>;">
            <td><%= classlist.section.name %></td>
            <td><%= classlist.section.subject.name %></td>
            <td><%= classlist.section.subject.teacher.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="mt-4 d-flex gap-2">
    <%= link_to edit_student_path(@student), class: "btn btn-primary d-flex align-items-center gap-1 px-3 action-btn", style: "background-color:#7b42f5; border:none; transition:0.2s;" do %>
      <i class="bi bi-pencil-square"></i> Edit
    <% end %>

    <%= link_to students_path, class: "btn btn-secondary d-flex align-items-center gap-1 px-3", style: "background-color:#a066ff; border:none; color:white; border-radius:8px; width:auto; transition:0.2s;" do %>
      <i class="bi bi-arrow-left-circle"></i> Back
    <% end %>

    <%= button_to @student, method: :delete, data: { confirm: "Are you sure?" },
        class: "btn btn-danger d-flex align-items-center gap-1 px-3", style: "transition:0.2s;" do %>
      <i class="bi bi-trash"></i> Delete
    <% end %>
  </div>
</div>
